---
const { title = "Navien Public Documents", description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        line-height: 1.6;
        background: #e8e8e8;
        color: #1a1a1a;
      }
      .header {
        background: white;
        border-bottom: 1px solid #e0e0e0;
        padding: 0 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 64px;
      }
      .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.25rem;
        color: #1a1a1a;
        text-decoration: none;
      }
      .logo-icon {
        font-weight: bold;
        font-size: 1.5rem;
        color: #4a90e2;
      }
      .logo-text {
        font-weight: 600;
      }
      .logo-subtitle {
        font-weight: 400;
        color: #666;
      }
      .nav {
        display: flex;
        gap: 2rem;
        align-items: center;
      }
      .nav a {
        color: #666;
        text-decoration: none;
        font-size: 1rem;
      }
      .nav a.active {
        color: #1a1a1a;
        border-bottom: 2px solid #4a90e2;
        padding-bottom: 1.5rem;
      }
      .search-box {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 24px;
        background: #f5f5f5;
        min-width: 200px;
      }
      .search-icon {
        color: #999;
      }
      .search-box input {
        border: none;
        background: transparent;
        outline: none;
        color: #666;
      }
      .breadcrumb {
        background: white;
        padding: 1rem 2rem;
        border-bottom: 1px solid #e0e0e0;
        display: flex;
        gap: 0.5rem;
        align-items: center;
        font-size: 0.95rem;
      }
      .breadcrumb a {
        color: #666;
        text-decoration: none;
      }
      .breadcrumb a:hover {
        color: #4a90e2;
      }
      .breadcrumb span {
        color: #999;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <a href="/navien-public-documents" class="logo">
        <span class="logo-icon">N</span>
        <span class="logo-text">Navien</span>
        <span class="logo-subtitle">Public Documents</span>
      </a>
      <nav class="nav">
      </nav>
      <div class="search-box">
        <span class="search-icon">üîç</span>
        <input type="text" placeholder="Search" />
      </div>
    </header>
    <div class="breadcrumb">
      <a href="/navien-public-documents">Home</a>
      <span>‚Ä∫</span>
      <span>Docs</span>
    </div>
    <slot />
  </body>
</html>
