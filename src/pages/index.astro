---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Navien Public Documents";

// Get all pages dynamically
const pages = await Astro.glob('./*.md');
const pageLinks = pages.map(page => ({
  url: page.url,
  title: page.frontmatter?.title || page.url?.split('/').pop()?.replace('.md', '') || 'Untitled',
  description: page.frontmatter?.description || '',
  icon: page.frontmatter?.icon || 'üìÑ'
}));
---

<BaseLayout title={pageTitle}>
  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 3rem 2rem;
    }
      h1 {
        color: #1a1a1a;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
      }
      .subtitle {
        color: #666;
        font-size: 1.125rem;
        margin-bottom: 3rem;
      }
      .page-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .page-card {
        background: white;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: flex-start;
        gap: 1.25rem;
        text-decoration: none;
        color: inherit;
        transition: all 0.2s;
      }
      .page-card:hover {
        border-color: #4a90e2;
        box-shadow: 0 4px 12px rgba(74, 144, 226, 0.15);
        transform: translateY(-2px);
      }
      .page-icon {
        width: 56px;
        height: 56px;
        background: #e8f2fc;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        flex-shrink: 0;
      }
      .page-content {
        flex: 1;
      }
      .page-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 0.25rem;
      }
      .page-description {
        color: #666;
        font-size: 0.95rem;
      }
  </style>

  <div class="container">
    <h1>Available Pages</h1>
    <p class="subtitle">Welcome to the Navien Public Documents site. Explore our comprehensive resources and guides.</p>
    <div class="page-list">
      <a href="/navien-public-documents" class="page-card">
        <div class="page-icon">üè†</div>
        <div class="page-content">
          <div class="page-title">Home</div>
          <div class="page-description">The main landing page for all public documentation.</div>
        </div>
      </a>
      {pageLinks.map(page => (
        <a href={page.url} class="page-card">
          <div class="page-icon">{page.icon}</div>
          <div class="page-content">
            <div class="page-title">{page.title}</div>
            <div class="page-description">{page.description}</div>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
